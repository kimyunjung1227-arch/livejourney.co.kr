{
  "appId": "com.livejourney.app",
  "appName": "LiveJourney",
  "webDir": "dist",
  "android": {
    "allowMixedContent": true,
    "backgroundColor": "#ffffff",
    "buildOptions": {
      "keystorePath": "",
      "keystoreAlias": ""
    }
  },
  "plugins": {
    "SplashScreen": {
      "launchShowDuration": 0,
      "backgroundColor": "#ffffff",
      "androidScaleType": "CENTER_CROP",
      "showSpinner": false
    },
    "StatusBar": {
      "style": "DARK",
      "backgroundColor": "#ffffff",
      "overlaysWebView": false
    },
    "Geolocation": {
      "permissions": {
        "location": "always"
      }
    },
    "Camera": {
      "permissions": {
        "camera": "Camera permission is required to take photos",
        "photos": "Photos permission is required to select photos"
      }
    }
  },
  "server": {
    "androidScheme": "https"
  }
}
