{
  "name": "livejourney-mvp",
  "version": "1.0.0",
  "description": "여행지 실시간 정보 SNS - LiveJourney MVP",
  "private": true,
  "workspaces": [
    "backend",
    "web"
  ],
  "scripts": {
    "backend": "cd backend && npm start",
    "web": "cd web && npm run dev",
    "mobile": "cd mobile && npm start",
    "mobile:tunnel": "cd mobile && npm run tunnel",
    "install-all": "npm install && cd backend && npm install && cd ../web && npm install && cd ../mobile && npm install",
    "dev": "concurrently \"npm run backend\" \"npm run web\"",
    "build": "cd web && npm run build",
    "start": "npm run dev"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
