# 서버 설정
PORT=3002
NODE_ENV=development

# MongoDB 설정
MONGODB_URI=mongodb://localhost:27017/livejourney
# 또는 MongoDB Atlas 사용 시:
# MONGODB_URI=mongodb+srv://<username>:<password>@cluster0.xxxxx.mongodb.net/livejourney?retryWrites=true&w=majority

# JWT 설정
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# 소셜 로그인 - 카카오
KAKAO_CLIENT_ID=your_kakao_client_id
KAKAO_CLIENT_SECRET=your_kakao_client_secret
KAKAO_CALLBACK_URL=http://localhost:3002/auth/kakao/callback

# 소셜 로그인 - 네이버
NAVER_CLIENT_ID=your_naver_client_id
NAVER_CLIENT_SECRET=your_naver_client_secret
NAVER_CALLBACK_URL=http://localhost:3002/auth/naver/callback

# 소셜 로그인 - 구글
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_CALLBACK_URL=http://localhost:3002/auth/google/callback

# 클라우드 비전 API (선택사항)
GOOGLE_VISION_API_KEY=your_google_vision_api_key

# 프론트엔드 URL
FRONTEND_URL=http://localhost:3000

# 업로드 설정
MAX_FILE_SIZE=10485760
# 10MB = 10 * 1024 * 1024




















